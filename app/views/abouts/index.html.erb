<section class="content">
  <h1>Listing abouts</h1>


  <ul>
    <% @abouts.each do |about| %>
        <li class="admin_item">
          <%= about.title %>
          <%= link_to 'Show', about %>
          <%= link_to 'Edit', edit_about_path(about) %>
          <%= link_to 'Destroy', about, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
    <% end %>
  </ul>

  <br />

  <div class="admin_item">
    <%= link_to 'New About', new_about_path %>
  </div>
</section>