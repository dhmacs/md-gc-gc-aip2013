<!DOCTYPE html>
<html>
<head>
  <title>Codech</title>
  <%= stylesheet_link_tag    'application', :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<section id="container">
  <header id="main_header">
    <h1 class="logo"><%= link_to 'Codech', :controller => :home, :action => :index %></h1>
    <nav class="landmarks">
      <%= link_to 'The group', About.first %>
      <%= link_to 'Products', products_path %>
      <%= link_to 'Designers', designers_path %>
      <%= link_to 'Services', :controller => :services, :action => :all_services %>
      <%= link_to 'Events', events_path %>
    </nav>
  </header>
  <section class="content_container">
    <%= yield %>
  </section>
  <footer id="footer">
    <p>Copyright 2013</p>
  </footer>
  <div class="admin">
    <%= link_to 'Admin page', :controller => :admin, :action => :index %>
  </div>
</section>

</body>
</html>
