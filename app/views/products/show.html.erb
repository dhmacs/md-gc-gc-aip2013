<section class = sidebar>
  <%= link_to "Technical Details", {:controller => "products", :action => :technical_details, :id => @product.id} %>
  <h4>Designer</h4>
  <%= link_to @designer.full_name, designer_path(@designer) %>
</section>
<section class = content>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

  <h2>Photogallery</h2>
  <% @product.images.each do |image| %>
      <div class="designer_item">
        <div class="img_container"><%= image_tag(image.complete_name, :class => 'thumbnail') %></div>
      </div>
  <% end %>


   <% if @guided_tour %>
    <%= link_to '<Prev', product_path(@previous, :manufacturer_type => @product.manufacturer_type, :room_id => @product.room, :manufacturer_id => @product.manufacturer, :category_id => @product.category) %>
    <%= link_to 'Next>', product_path(@next, :manufacturer_type => @product.manufacturer_type ,:room_id => @product.room, :manufacturer_id => @product.manufacturer, :category_id => @product.category) %> </br>
    <% end %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</section>